<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.appeatit.DetailActivity">


    <include
        android:id="@+id/info_meal"
        layout="@layout/meal_content" />


    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_meal"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="10dp"
        android:text="@string/booking_details"
        android:textAllCaps="true"
        android:textColor="#ddd"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">


            <Button
                android:id="@+id/btDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:padding="16dp"
                android:text="27 Jul 17"
                android:background="@drawable/buttonshapeleft"
                 />

            <Button
                android:id="@+id/btTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:padding="16dp"
                android:text="19:30 h"
                android:background="@drawable/buttonshapecenter"
                 />

            <Button
                android:id="@+id/btGuests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Guests"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:padding="16dp"
                android:background="@drawable/buttonshaperight"
                android:shadowColor="#A83434"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />
        </LinearLayout>


    </LinearLayout>

    <Button

        android:id="@+id/btnConfirm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_detail"
        android:text="@string/make_a_reservation" />


</RelativeLayout>
