<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e7e6e6"
    >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/macarrao"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:contentDescription="@string/meal_desc"
            android:scaleType="fitXY"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/chef"
            android:drawableStart="@drawable/chef"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Tobias GuimarÃ£es"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/mealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spaghetti Bolognese"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/calendar"
                android:drawableStart="@drawable/calendar"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:maxLines="1"

                android:text="15/04/2017"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/tag"
                android:drawableStart="@drawable/tag"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="$ 10.5"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/people"
                android:drawableStart="@drawable/people"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="5 people"
                android:textSize="14sp"
                />



        </LinearLayout>





</LinearLayout>